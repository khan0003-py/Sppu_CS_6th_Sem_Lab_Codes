import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class WeatherDataAnalyzer {
    public static void main(String[] args) {
        File file = new File("E:\\Eclipse Java Workspace\\Practical12_DSBDA\\src\\com\\practical12\\sample_weather.txt"); // Replace this with the actual file path

        try {
            Scanner scanner = new Scanner(file);
            int count = 0;
            double totalTemperature = 0.0;
            double totalDewPoint = 0.0;
            double totalWindSpeed = 0.0;

            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                String[] parts = line.split("\\s+");

                if (parts.length >= 3) {
                    try {
                        double temperature = Double.parseDouble(parts[0]);
                        double dewPoint = Double.parseDouble(parts[1]);
                        double windSpeed = Double.parseDouble(parts[2]);

                        // Update totals
                        totalTemperature += temperature;
                        totalDewPoint += dewPoint;
                        totalWindSpeed += windSpeed;
                        count++;
                    } catch (NumberFormatException e) {
                        // Handle parsing errors
                        System.err.println("Error parsing line: " + line);
                    }
                } else {
                    // Handle lines with insufficient data
                    System.err.println("Invalid data format in line: " + line);
                }
            }

            // Check if any data was processed
            if (count > 0) {
                // Calculate averages
                double avgTemperature = totalTemperature / count;
                double avgDewPoint = totalDewPoint / count;
                double avgWindSpeed = totalWindSpeed / count;

                System.out.println("Average Temperature: " + avgTemperature);
                System.out.println("Average Dew Point: " + avgDewPoint);
                System.out.println("Average Wind Speed: " + avgWindSpeed);
            } else {
                System.out.println("No valid data found in the file.");
            }

            scanner.close();
        } catch (FileNotFoundException e) {
            // Handle file not found exception
            System.err.println("File not found: " + file.getPath());
        }
    }
}
