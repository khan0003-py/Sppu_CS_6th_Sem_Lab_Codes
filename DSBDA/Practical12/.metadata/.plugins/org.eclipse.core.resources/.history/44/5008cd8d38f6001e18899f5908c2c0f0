package com.practical12;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class WeatherDataAnalyzer {
    public static void main(String[] args) {
        File file = new File("sample_weather"); // Replace "weather_data.txt" with the actual file path
        try {
            Scanner scanner = new Scanner(file);
            int count = 0;
            double totalTemperature = 0.0;
            double totalDewPoint = 0.0;
            double totalWindSpeed = 0.0;

            while (scanner.hasNextLine()) {
                String line = scanner.nextLine();
                // Parse the line to extract temperature, dew point, wind speed
                // Assuming each line has temperature, dew point, and wind speed separated by spaces
                String[] parts = line.split("\\s+");
                double temperature = Double.parseDouble(parts[0]);
                double dewPoint = Double.parseDouble(parts[1]);
                double windSpeed = Double.parseDouble(parts[2]);

                // Update totals
                totalTemperature += temperature;
                totalDewPoint += dewPoint;
                totalWindSpeed += windSpeed;
                count++;
            }

            // Calculate averages
            double avgTemperature = totalTemperature / count;
            double avgDewPoint = totalDewPoint / count;
            double avgWindSpeed = totalWindSpeed / count;

            System.out.println("Average Temperature: " + avgTemperature);
            System.out.println("Average Dew Point: " + avgDewPoint);
            System.out.println("Average Wind Speed: " + avgWindSpeed);

            scanner.close();
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }
    }
}
